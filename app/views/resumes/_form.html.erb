<%= form_with(model: resume, local: true) do |form| %>
    <% if resume.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:</h2>

            <ul>
            <% resume.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="text-field" >
        <%= form.label:name %>
        <%= form.text_field:name, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.label:phone %>
        <%= form.text_field:phone, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.label:address %>
        <%= form.text_area:address, rows:5, cols:100, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.label:description %>
        <%= form.text_area:description, rows:5, cols:100, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.label:objective %>
        <%= form.text_area:objective, rows:5, cols:100, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.label:experience %>
        <%= form.text_area:experience, rows:5, cols:100, class:"form-control" %>
    </div>
    <br>
    <div class="text-field" >
        <%= form.file_field:photo %>
    </div>
    <hr>
    <div class="actions text-right">
        <%= form.submit "Create Resume", class:"btn btn-primary" %>
    </div>
<% end %>
